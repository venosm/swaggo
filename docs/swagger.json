                                "$ref": "#/components/schemas/main.UzivatelRequest"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "201": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/main.UspesnaOdpoved"
                                        },
                                        {
